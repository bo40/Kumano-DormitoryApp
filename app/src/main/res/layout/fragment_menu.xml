<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kumano_ryo.shijubo.kumano_dormitoryapp.MenuFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="1,2,3,4"
                android:stretchColumns="1,2,3,4">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/background_light"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="3dp"
                        android:paddingTop="2dp"
                        android:text="日付"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_height="match_parent"
                        android:background="#FFC7AF"
                        android:gravity="center"
                        android:minWidth="100dp"
                        android:padding="1dp"
                        android:text="昼食"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_height="match_parent"
                        android:background="#FFAD90"
                        android:gravity="center"
                        android:minWidth="100dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="昼食(麺)"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_height="match_parent"
                        android:background="#A4C6FF"
                        android:gravity="center"
                        android:minWidth="100dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="夕食"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/background_light">

                    <TextView
                        android:id="@+id/label_monday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/background_light"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="3dp"
                        android:paddingTop="2dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/monday_lun"
                        android:layout_height="match_parent"
                        android:background="#FFC7AF"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/monday_lun_noodle"
                        android:layout_height="match_parent"
                        android:background="#FFAD90"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/monday_din"
                        android:layout_height="match_parent"
                        android:background="#A4C6FF"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/background_light">

                    <TextView
                        android:id="@+id/label_tuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/background_light"
                        android:gravity="center"
                        android:padding="1dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="3dp"
                        android:paddingTop="2dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tuesday_lun"
                        android:layout_height="match_parent"
                        android:background="#FFC7AF"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tuesday_lun_noodle"
                        android:layout_height="match_parent"
                        android:background="#FFAD90"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tuesday_din"
                        android:layout_height="match_parent"
                        android:background="#A4C6FF"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/background_light">

                    <TextView
                        android:id="@+id/label_wednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/background_light"
                        android:gravity="center"
                        android:padding="1dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="3dp"
                        android:paddingTop="2dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/wednesday_lun"
                        android:layout_height="match_parent"
                        android:background="#FFC7AF"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/wednesday_lun_noodle"
                        android:layout_height="match_parent"
                        android:background="#FFAD90"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/wednesday_din"
                        android:layout_height="match_parent"
                        android:background="#A4C6FF"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/background_light">

                    <TextView
                        android:id="@+id/label_thursday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/background_light"
                        android:gravity="center"
                        android:padding="1dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="3dp"
                        android:paddingTop="2dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/thursday_lun"
                        android:layout_height="match_parent"
                        android:background="#FFC7AF"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/thursday_lun_noodle"
                        android:layout_height="match_parent"
                        android:background="#FFAD90"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/thursday_din"
                        android:layout_height="match_parent"
                        android:background="#A4C6FF"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/background_light">

                    <TextView
                        android:id="@+id/label_friday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/background_light"
                        android:gravity="center"
                        android:padding="1dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="3dp"
                        android:paddingTop="2dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/friday_lun"
                        android:layout_height="match_parent"
                        android:background="#FFC7AF"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/friday_lun_noodle"
                        android:layout_height="match_parent"
                        android:background="#FFAD90"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/friday_din"
                        android:layout_height="match_parent"
                        android:background="#A4C6FF"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>


            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/progressBarBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <ProgressBar
            android:id="@+id/menusProgressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>
